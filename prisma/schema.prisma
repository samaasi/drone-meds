// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Drone {
  id              String     @id @default(cuid())
  serialNumber    String     @unique
  model           DroneModel
  weightLimit     Float
  batteryCapacity Float
  state           DroneState
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}

model Medicaton {
  id        String   @id @default(cuid())
  name      String
  weight    Float
  code      String   @unique
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum DroneModel {
  Lightweight
  Middleweight
  Cruiserweight
  Heavyweight
}

enum DroneState {
  IDLE
  LOADING
  LOADED
  DELIVERING
  DELIVERED
  RETURNING
}
